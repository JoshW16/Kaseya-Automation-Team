<?xml version="1.0" encoding="utf-8"?>
<ScriptExport xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xsd="http://www.w3.org/2001/XMLSchema" xmlns="http://www.kaseya.com/vsa/2008/12/Scripting">
  <Folder name="OneDrive Installer" treePres="3">
    <Procedure name="OneDrive Installer" treePres="3" id="1678209403" folderId="822617021446403" treeFullPath="Professional Services Team.OneDrive Installer">
      <Body description="">
        <Statement description="Agent procedure to download and install OneDrive if not already installed&#xD;&#xA;Version 0.1" name="GetVariable" continueOnFail="false">
          <Parameter xsi:type="EnumParameter" name="VariableType" value="AgentTempDirectory" />
          <Parameter xsi:type="StringParameter" name="SourceContent" value="" />
          <Parameter xsi:type="StringParameter" name="VariableName" value="ktemp" />
        </Statement>
        <If description="">
          <Condition name="TestFile">
            <Parameter xsi:type="StringParameter" name="Path" value="%LocalAppData%\Microsoft\OneDrive\OneDrive.exe" />
            <Parameter xsi:type="EnumParameter" name="Condition" value="Exists" />
            <Parameter xsi:type="StringParameter" name="Value" value="" />
          </Condition>
          <Then>
            <Statement name="WriteScriptLogEntry" continueOnFail="false">
              <Parameter xsi:type="StringParameter" name="Comment" value="One Drive is already installed" />
            </Statement>
          </Then>
          <Else>
            <Statement name="GetURL" continueOnFail="false">
              <Parameter xsi:type="StringParameter" name="URL" value="https://go.microsoft.com/fwlink/p/?LinkID=844652" />
              <Parameter xsi:type="StringParameter" name="ResponseFileName" value="#ktemp#\OneDriveSetup.exe" />
              <Parameter xsi:type="BooleanParameter" name="WaitComplete" value="True" />
            </Statement>
            <If description="">
              <Condition name="TestFile">
                <Parameter xsi:type="StringParameter" name="Path" value="#ktemp#\OneDriveSetup.exe" />
                <Parameter xsi:type="EnumParameter" name="Condition" value="Exists" />
                <Parameter xsi:type="StringParameter" name="Value" value="" />
              </Condition>
              <Then>
                <Statement name="WriteScriptLogEntry" continueOnFail="false">
                  <Parameter xsi:type="StringParameter" name="Comment" value="Installer file has been successfully downloaded!" />
                </Statement>
                <Statement name="ExecuteShellCommand" continueOnFail="false">
                  <Parameter xsi:type="StringParameter" name="Command" value="#ktemp#\OneDriveSetup.exe  /silent" />
                  <Parameter xsi:type="EnumParameter" name="ExecuteAccount" value="User" />
                  <Parameter xsi:type="BooleanParameter" name="Is64Bit" value="False" />
                </Statement>
                <Statement name="PauseScript" continueOnFail="false">
                  <Parameter xsi:type="IntegerParameter" name="Seconds" value="30" />
                </Statement>
                <If description="">
                  <Condition name="TestFile">
                    <Parameter xsi:type="StringParameter" name="Path" value="%LocalAppData%\Microsoft\OneDrive\OneDrive.exe" />
                    <Parameter xsi:type="EnumParameter" name="Condition" value="Exists" />
                    <Parameter xsi:type="StringParameter" name="Value" value="" />
                  </Condition>
                  <Then>
                    <Statement name="WriteScriptLogEntry" continueOnFail="false">
                      <Parameter xsi:type="StringParameter" name="Comment" value="One Drive has been successfully installed" />
                    </Statement>
                    <Statement name="DeleteFile" continueOnFail="false">
                      <Parameter xsi:type="StringParameter" name="Path" value="#ktemp#\OneDriveSetup.exe" />
                    </Statement>
                  </Then>
                  <Else>
                    <Statement name="WriteScriptLogEntry" continueOnFail="false">
                      <Parameter xsi:type="StringParameter" name="Comment" value="Installation didn't complete, please see if there could anything that is blocking!" />
                    </Statement>
                  </Else>
                </If>
              </Then>
            </If>
          </Else>
        </If>
      </Body>
    </Procedure>
  </Folder>
</ScriptExport>